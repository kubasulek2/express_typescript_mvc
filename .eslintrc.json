{
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": [
		"standard",
		"plugin:security/recommended",
		"plugin:node/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"no-unused-expressions": [
			"error",
			{
				"allowTernary": true,
				"allowShortCircuit": true
			}
		],
		"no-case-declarations": 2,
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "[_]+",
				"args": "after-used"
			}
		],
		"no-console": 0,
		"linebreak-style": 0,
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			2,
			"always"
		],
		"no-undef": 2,
		"security/detect-object-injection": 0,
		"security/detect-non-literal-fs-filename": 0,
		"template-curly-spacing": [
			"error",
			"always"
		],
		"no-tabs": 0,
		"node/no-unsupported-features/es-syntax": 0
	}
}